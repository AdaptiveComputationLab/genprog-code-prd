#!/bin/sh

RED="\033[1;31m"
GREEN="\033[1;32m"
WHITE="\033[0m"

echo "### KNOWN GOOD"
for file in `find tests/good/*.json`
do
	$1 --verify $file
	if [ $? -eq 0 ]; then
		echo "${GREEN}SUCCESS${WHITE}:  $file"
	else
		echo "${RED}FAILED${WHITE} :  $file"
	fi
done

echo "### KNOWN BAD"
for file in `find tests/bad/*.json`
do
	$1 --verify $file
	if [ $? -eq 1 ]; then
		echo "${GREEN}SUCCESS${WHITE}:  $file"
	else
		echo "${RED}FAILED${WHITE} :  $file"
	fi
done
